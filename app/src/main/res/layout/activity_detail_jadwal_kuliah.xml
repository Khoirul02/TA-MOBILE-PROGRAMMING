                        <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ruang"/>
                        <TextView
                                android:id="@+id/tvRuangMK"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
